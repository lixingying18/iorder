<% provide(:title, '立即注册') %>

<h1>现在注册</h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for(@user) do |f| %>
<%= f.label :name ,"用户名" %>
<%= f.text_field :name  %>
<%= f.label :phonenum ,"手机号" %>
<%= f.text_field :phonenum  %>

<%= f.label :email ,"邮箱" %>
<%= f.email_field :email %>

<%= f.label :password ,"密码" %>
<%= f.password_field :password %>
<%= f.label :password_confirmation, "密码确定" %>
<%= f.password_field :password_confirmation %>
<%= f.submit "创建我的账号", class: "btn btn-primary" %>
<% end %>
</div>
</div>